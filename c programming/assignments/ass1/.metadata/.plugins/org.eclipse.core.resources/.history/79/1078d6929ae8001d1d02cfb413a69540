#include <stdio.h>
void main()
{
	char operator;
	float num1,num2;
	printf("enter an operator: ");
	fflush(stdin); fflush(stdout);
	scanf("%c",&operator);
	printf("enter the numbers: ");
	fflush(stdin); fflush(stdout);
	scanf("%f %f",&num1,&num2);
	if(operator=='+') printf("%f + %f= %f",num1,num2,(num1+num2));
	else if(operator=='-') printf("%f - %f= %f",num1,num2,(num1-num2));
	else if(operator=='*') printf("%f * %f= %f",num1,num2,(num1*num2));
	else if(operator=='/') printf("%f / %f= %f",num1,num2,(num1/num2));
}

